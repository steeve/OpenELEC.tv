[Unit]
Description=Broadcom sdio firmware update for bcm20710a1
ConditionPathExists=/dev/ttyS1

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/bin/sh -c "echo 0 > /sys/class/rfkill/rfkill0/state; sleep 1; echo 1 > /sys/class/rfkill/rfkill0/state; /usr/bin/brcm_patchram_plus --patchram /lib/firmware/brcm/bcm4335c0.hcd --baudrate 3000000 --enable_hci --use_baudrate_for_download --tosleep 15000 --no2bytes /dev/ttyS1"

[Install]
WantedBy=bluetooth.target
