[Unit]
Description=Broadcom sdio firmware update for bcm20710a1
ConditionPathExists=/dev/ttyS2

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/bin/sh -c "echo 0 > /sys/class/rfkill/rfkill0/state; sleep 1; echo 1 > /sys/class/rfkill/rfkill0/state; modprobe hci-uart; /usr/bin/brcm_patchram_plus --patchram /lib/firmware/brcm/bcm20710a1.hcd --tosleep 15000 --no2bytes /dev/ttyS2; /usr/bin/hciattach /dev/ttyS2 any;"

[Install]
WantedBy=bluetooth.target
